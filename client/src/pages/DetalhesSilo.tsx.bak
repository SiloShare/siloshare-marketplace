import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { 
  ArrowLeft, 
  MapPin, 
  Warehouse, 
  Calendar,
  Shield,
  CheckCircle2,
  Wind,
  Thermometer,
  Scale,
  FlaskConical,
  Star,
  UserCircle,
  Heart,
  Share2,
  ChevronLeft,
  ChevronRight,
  X,
  Award,
  Truck
} from "lucide-react";
import { trpc } from "@/lib/trpc";
import { useAuth } from "@/_core/hooks/useAuth";
import { useAuthModal } from "@/hooks/useAuthModal";
import SignupModal from "@/components/SignupModal";

export default function DetalhesSilo() {
  const { id } = useParams();
  const [, setLocation] = useLocation();
  const { user, isAuthenticated } = useAuth();
  const { isOpen, redirectTo, openAuthModal, closeAuthModal } = useAuthModal();
  const [fotoAtual, setFotoAtual] = useState(0);
  const [mostrarGaleria, setMostrarGaleria] = useState(false);

  const { data: silo, isLoading } = trpc.silos.getById.useQuery(
    { id: parseInt(id || "0") }
  );

  const handleContratar = () => {
    if (!isAuthenticated) {
      openAuthModal(`/checkout/silo/${id}`);
      return;
    }
    setLocation(`/checkout/silo/${id}`);
  };

  if (isLoading) {
    return (
      <div className="min-h-screen bg-white flex items-center justify-center">
        <p className="text-gray-600">Carregando...</p>
      </div>
    );
  }

  if (!silo) {
    return (
      <div className="min-h-screen bg-white flex items-center justify-center">
        <div className="text-center">
          <p className="text-gray-600 mb-4">Silo não encontrado.</p>
          <Button onClick={() => setLocation("/buscar-armazenagem")}>
            Voltar para a busca
          </Button>
        </div>
      </div>
    );
  }

  // Parse fotos do JSON
  const fotos = silo.fotos ? (typeof silo.fotos === 'string' ? JSON.parse(silo.fotos) : silo.fotos) : [];
  
  const proximaFoto = () => {
    setFotoAtual((prev) => (prev + 1) % fotos.length);
  };

  const fotoAnterior = () => {
    setFotoAtual((prev) => (prev - 1 + fotos.length) % fotos.length);
  };

  const infraestrutura = [
    { label: "Secagem Completa", icon: Thermometer, available: silo.temSecagem },
    { label: "Limpeza de Grãos", icon: CheckCircle2, available: silo.temLimpeza },
    { label: "Aeração Controlada", icon: Wind, available: silo.temAeracao },
    { label: "Monitoramento 24/7", icon: Shield, available: silo.temMonitoramento },
    { label: "Balança Rodoviária", icon: Scale, available: silo.temBalanca },
    { label: "Laboratório de Análise", icon: FlaskConical, available: silo.temLaboratorio },
  ].filter(item => item.available);

  // Mock de reviews (TODO: implementar reviews reais)
  const reviews = [
    { id: 1, nome: "João Silva", data: "Março 2025", rating: 5, comentario: "Excelente infraestrutura e atendimento. Recomendo!" },
    { id: 2, nome: "Maria Santos", data: "Fevereiro 2025", rating: 5, comentario: "Silo muito bem cuidado, equipe profissional." },
    { id: 3, nome: "Pedro Oliveira", data: "Janeiro 2025", rating: 4, comentario: "Boa localização e preço justo." },
  ];

  const mediaAvaliacoes = 4.8;
  const totalAvaliacoes = 23;

  return (
    <div className="min-h-screen bg-white">
      <SignupModal open={isOpen} onClose={closeAuthModal} redirectTo={redirectTo} />
      
      {/* Header Fixo */}
      <header className="bg-white border-b sticky top-0 z-30">
        <div className="container mx-auto px-4 sm:px-6 lg:px-8 py-4">
          <div className="flex items-center justify-between">
            <button
              onClick={() => setLocation("/buscar-armazenagem")}
              className="flex items-center gap-2 text-gray-700 hover:text-black font-medium"
            >
              <ArrowLeft className="h-5 w-5" />
              <span className="hidden sm:inline">Voltar</span>
            </button>
            <div className="flex items-center gap-4">
              <button className="flex items-center gap-2 text-gray-700 hover:text-black font-medium">
                <Share2 className="h-5 w-5" />
                <span className="hidden sm:inline">Compartilhar</span>
              </button>
              <button className="flex items-center gap-2 text-gray-700 hover:text-black font-medium">
                <Heart className="h-5 w-5" />
                <span className="hidden sm:inline">Salvar</span>
              </button>
            </div>
          </div>
        </div>
      </header>

      {/* Galeria de Fotos - Estilo Airbnb */}
      <div className="container mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div className="grid grid-cols-4 gap-2 rounded-xl overflow-hidden h-[500px] cursor-pointer" onClick={() => setMostrarGaleria(true)}>
          {/* Foto Principal */}
          <div className="col-span-4 md:col-span-2 row-span-2 relative group">
            <img 
              src={fotos[0] || "/placeholder-silo.jpg"} 
              alt="Foto principal" 
              className="w-full h-full object-cover group-hover:brightness-95 transition"
            />
          </div>
          
          {/* Grid de fotos menores */}
          {fotos.slice(1, 5).map((foto, index) => (
            <div key={index} className="hidden md:block relative group">
              <img 
                src={foto} 
                alt={`Foto ${index + 2}`} 
                className="w-full h-full object-cover group-hover:brightness-95 transition"
              />
              {index === 3 && fotos.length > 5 && (
                <div className="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
                  <span className="text-white font-semibold">+{fotos.length - 5} fotos</span>
                </div>
              )}
            </div>
          ))}
        </div>

        {/* Modal de Galeria */}
        {mostrarGaleria && (
          <div className="fixed inset-0 bg-black z-50 flex items-center justify-center">
            <button 
              onClick={() => setMostrarGaleria(false)}
              className="absolute top-4 right-4 text-white hover:text-gray-300 z-10"
            >
              <X className="h-8 w-8" />
            </button>
            
            <button 
              onClick={(e) => { e.stopPropagation(); fotoAnterior(); }}
              className="absolute left-4 text-white hover:text-gray-300 z-10"
            >
              <ChevronLeft className="h-12 w-12" />
            </button>
            
            <img 
              src={fotos[fotoAtual]} 
              alt={`Foto ${fotoAtual + 1}`}
              className="max-h-[90vh] max-w-[90vw] object-contain"
            />
            
            <button 
              onClick={(e) => { e.stopPropagation(); proximaFoto(); }}
              className="absolute right-4 text-white hover:text-gray-300 z-10"
            >
              <ChevronRight className="h-12 w-12" />
            </button>
            
            <div className="absolute bottom-4 text-white">
              {fotoAtual + 1} / {fotos.length}
            </div>
          </div>
        )}
      </div>

      {/* Conteúdo Principal */}
      <div className="container mx-auto px-4 sm:px-6 lg:px-8 pb-24">
        <div className="grid grid-cols-1 lg:grid-cols-3 gap-12">
          {/* Coluna Esquerda - Informações */}
          <div className="lg:col-span-2 space-y-8">
            {/* Título e Localização */}
            <div className="border-b pb-6">
              <h1 className="text-3xl font-semibold mb-2">{silo.nome}</h1>
              <div className="flex items-center gap-4 text-gray-600">
                <div className="flex items-center gap-1">
                  <Star className="h-4 w-4 fill-current text-black" />
                  <span className="font-semibold text-black">{mediaAvaliacoes}</span>
                  <span>({totalAvaliacoes} avaliações)</span>
                </div>
                <span>•</span>
                <div className="flex items-center gap-1">
                  <MapPin className="h-4 w-4" />
                  <span>{silo.cidade}, {silo.estado}</span>
                </div>
              </div>
            </div>

            {/* Informações Básicas */}
            <div className="border-b pb-6">
              <h2 className="text-xl font-semibold mb-4">Informações do Silo</h2>
              <div className="grid grid-cols-2 gap-4">
                <div>
                  <p className="text-gray-600 text-sm">Tipo</p>
                  <p className="font-semibold">{silo.tipo}</p>
                </div>
                <div>
                  <p className="text-gray-600 text-sm">Capacidade Total</p>
                  <p className="font-semibold">{silo.capacidadeTotal?.toLocaleString('pt-BR')} toneladas</p>
                </div>
                <div>
                  <p className="text-gray-600 text-sm">Capacidade Disponível</p>
                  <p className="font-semibold text-green-600">{silo.capacidadeDisponivel?.toLocaleString('pt-BR')} toneladas</p>
                </div>
                <div>
                  <p className="text-gray-600 text-sm">Preço</p>
                  <p className="font-semibold text-lg">R$ {silo.precoPorTonelada?.toFixed(2)} /ton/mês</p>
                </div>
              </div>
            </div>

            {/* Certificações */}
            <div className="border-b pb-6">
              <h2 className="text-xl font-semibold mb-4 flex items-center gap-2">
                <Award className="h-5 w-5" />
                Certificações e Selos
              </h2>
              <div className="flex flex-wrap gap-3">
                <Badge variant="outline" className="px-4 py-2 border-green-600 text-green-600">
                  <CheckCircle2 className="h-4 w-4 mr-2" />
                  Certificado CONAB
                </Badge>
                <Badge variant="outline" className="px-4 py-2">
                  <Shield className="h-4 w-4 mr-2" />
                  ISO 9001
                </Badge>
                <Badge variant="outline" className="px-4 py-2">
                  <CheckCircle2 className="h-4 w-4 mr-2" />
                  Licença de Operação
                </Badge>
              </div>
            </div>

            {/* Infraestrutura */}
            <div className="border-b pb-6">
              <h2 className="text-xl font-semibold mb-4">O que este silo oferece</h2>
              <div className="grid grid-cols-1 sm:grid-cols-2 gap-4">
                {infraestrutura.map((item, index) => (
                  <div key={index} className="flex items-center gap-3">
                    <item.icon className="h-6 w-6 text-gray-700" />
                    <span>{item.label}</span>
                  </div>
                ))}
                {silo.ofereceTransporte && (
                  <div className="flex items-center gap-3">
                    <Truck className="h-6 w-6 text-gray-700" />
                    <span>Transporte Disponível</span>
                  </div>
                )}
              </div>
            </div>

            {/* Descrição */}
            {silo.descricao && (
              <div className="border-b pb-6">
                <h2 className="text-xl font-semibold mb-4">Sobre este silo</h2>
                <p className="text-gray-700 leading-relaxed whitespace-pre-line">
                  {silo.descricao}
                </p>
              </div>
            )}

            {/* Localização */}
            <div className="border-b pb-6">
              <h2 className="text-xl font-semibold mb-4">Onde você vai armazenar</h2>
              <div className="aspect-video bg-gray-200 rounded-xl flex items-center justify-center mb-4">
                <MapPin className="h-12 w-12 text-gray-400" />
                {/* TODO: Integrar com Google Maps */}
              </div>
              <p className="text-gray-700">{silo.cidade}, {silo.estado}, Brasil</p>
            </div>

            {/* Avaliações */}
            <div className="pb-6">
              <h2 className="text-xl font-semibold mb-6 flex items-center gap-2">
                <Star className="h-5 w-5 fill-current" />
                {mediaAvaliacoes} • {totalAvaliacoes} avaliações
              </h2>
              
              <div className="space-y-6">
                {reviews.map((review) => (
                  <div key={review.id} className="border-b pb-6 last:border-0">
                    <div className="flex items-start gap-4">
                      <div className="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center">
                        <UserCircle className="h-8 w-8 text-gray-500" />
                      </div>
                      <div className="flex-1">
                        <div className="flex items-center justify-between mb-1">
                          <h3 className="font-semibold">{review.nome}</h3>
                          <span className="text-sm text-gray-500">{review.data}</span>
                        </div>
                        <div className="flex items-center gap-1 mb-2">
                          {[...Array(review.rating)].map((_, i) => (
                            <Star key={i} className="h-4 w-4 fill-current text-black" />
                          ))}
                        </div>
                        <p className="text-gray-700">{review.comentario}</p>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>

          {/* Coluna Direita - Card de Reserva Fixo */}
          <div className="lg:col-span-1">
            <div className="sticky top-24">
              <Card className="p-6 shadow-xl border-2">
                <div className="mb-6">
                  <div className="flex items-baseline gap-2 mb-2">
                    <span className="text-3xl font-semibold">R$ {silo.precoPorTonelada?.toFixed(2)}</span>
                    <span className="text-gray-600">/ ton / mês</span>
                  </div>
                  <div className="flex items-center gap-2 text-sm">
                    <Star className="h-4 w-4 fill-current" />
                    <span className="font-semibold">{mediaAvaliacoes}</span>
                    <span className="text-gray-600">({totalAvaliacoes} avaliações)</span>
                  </div>
                </div>

                <Button 
                  onClick={handleContratar}
                  className="w-full bg-black hover:bg-gray-800 text-white py-6 text-lg font-semibold mb-4"
                >
                  Contratar Armazenagem
                </Button>

                <p className="text-center text-sm text-gray-600 mb-4">
                  Você ainda não será cobrado
                </p>

                <div className="border-t pt-4 space-y-3 text-sm">
                  <div className="flex justify-between">
                    <span className="text-gray-600">Capacidade disponível</span>
                    <span className="font-semibold">{silo.capacidadeDisponivel?.toLocaleString('pt-BR')} ton</span>
                  </div>
                  {silo.ofereceTransporte && (
                    <div className="flex justify-between">
                      <span className="text-gray-600">Transporte</span>
                      <span className="font-semibold text-green-600">Disponível</span>
                    </div>
                  )}
                </div>
              </Card>

              {/* Informações de Segurança */}
              <div className="mt-6 p-4 bg-gray-50 rounded-lg">
                <div className="flex items-start gap-3">
                  <Shield className="h-5 w-5 text-gray-600 mt-0.5" />
                  <div className="text-sm text-gray-700">
                    <p className="font-semibold mb-1">Sua segurança é nossa prioridade</p>
                    <p className="text-xs">
                      Todos os silos são verificados e certificados. Pagamento 100% seguro.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}

